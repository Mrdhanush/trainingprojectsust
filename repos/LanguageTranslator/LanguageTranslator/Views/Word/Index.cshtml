@model LanguageTranslator.Models.WordModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MultiLanguage Translate </title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header text-center">
                        <h2>Word Translator</h2>
                    </div>
                    <div class="card-body">
                        <form asp-action="Translate" method="post">
                            <div class="mb-3">
                                <label for="OriginalWord" class="form-label">Enter Word (in English):</label>
                                <input type="text" class="form-control" id="OriginalWord" name="OriginalWord" required />
                            </div>
                            <div class="mb-3">
                                <label for="Language" class="form-label">Translate to:</label>
                                <select class="form-select" id="Language" name="Language" required>
                                    <option value="Tamil">Tamil</option>
                                    <option value="French">French</option>
                                    <!-- Add more languages here if needed -->
                                </select>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Translate</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Display translation result -->
        @if (Model != null && !string.IsNullOrEmpty(Model.TranslatedWord))
        {
            <div class="row mt-4">
                <div class="col-md-6 offset-md-3">
                    <div class="alert alert-success text-center">
                        <h4>Translation Result</h4>
                        <p><strong>@Model.OriginalWord</strong> translated to <strong>@Model.Language</strong> is: <em>@Model.TranslatedWord</em></p>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
